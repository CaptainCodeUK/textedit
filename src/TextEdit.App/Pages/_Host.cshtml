@page "/"
@namespace TextEdit.App.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Scrappy Text Editor</title>
    <base href="~/" />
    <link href="css/app.css" rel="stylesheet" />
</head>
<body>
    <component type="typeof(TextEdit.UI.Pages.App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">ðŸ—™</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="js/electron-ipc.js"></script>
    <script src="js/shell.js"></script>
    <script src="js/theme.js"></script>
    <script src="js/focusTrap.js?v=1"></script>
    <script src="js/editorFocus.js?v=1"></script>
    <script src="js/portal.js?v=1"></script>
    <script src="_content/TextEdit.UI/js/monacoInterop.js?v=1"></script>
    <script src="_content/TextEdit.UI/js/codemirrorFallback.js?v=1"></script>
    <script>
        // If a local CodeMirror 6 bundle was created (via npm build), load it early so
        // any subsequent dynamic imports re-use the same module instance and avoid
                // "Unrecognized extension" issues caused by multiple @@codemirror/* instances.
        (async function() {
            try {
                // HEAD checks are cheaper than fetching the whole bundle
                const res = await fetch('/_content/TextEdit.UI/lib/codemirror/codemirror-bundle.js', { method: 'HEAD' });
                if (res.ok) {
                    const tag = document.createElement('script');
                    tag.type = 'module';
                    tag.src = '/_content/TextEdit.UI/lib/codemirror/codemirror-bundle.js';
                    document.head.appendChild(tag);
                }
            } catch (e) { /* ignore failures - We'll fall back to CDN */ }
        })();
    </script>
    <script src="_content/TextEdit.UI/js/codemirrorInterop.js?v=1"></script>
</body>
</html>
