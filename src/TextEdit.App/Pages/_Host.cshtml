@page "/"
@namespace TextEdit.App.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Scrappy Text Editor</title>
    <base href="~/" />
    <link href="css/app.css" rel="stylesheet" />
</head>
<body>
    <component type="typeof(TextEdit.UI.Pages.App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">ðŸ—™</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="js/electron-ipc.js"></script>
    <script src="js/shell.js"></script>
    <script src="js/theme.js"></script>
    <script src="js/focusTrap.js?v=1"></script>
    <script src="js/editorFocus.js?v=1"></script>
    <script src="js/portal.js?v=1"></script>
    <script src="_content/TextEdit.UI/js/monacoInterop.js?v=1"></script>
    <script src="_content/TextEdit.UI/js/codemirrorFallback.js?v=1"></script>
    <script src="_content/TextEdit.UI/js/codemirrorInterop.js?v=1"></script>
    <script>
        // Capture uncaught/async errors in a test-friendly global for Playwright to assert
        window.__lastUnhandledError = null;
        window.addEventListener('error', function (e) { try { window.__lastUnhandledError = e.error || e.message || "error"; } catch {} });
        window.addEventListener('unhandledrejection', function (e) { try { window.__lastUnhandledError = e.reason || e; } catch {} });
    </script>
</body>
</html>
