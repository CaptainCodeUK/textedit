{
  "executable": "TextEdit.App",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "scrappy-text-editor",
  "author": "",
  "singleInstance": false,
  "environment": "Production",
  "build": {
    "appId": "com.scrappytexteditor.app",
    "productName": "Scrappy Text Editor",
    "copyright": "Copyright Â© 2025",
    "buildVersion": "1.0.0",
    "compression": "maximum",
    "directories": {
      "output": "bin/Desktop"
    },
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "identity": null,
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    },
    "win": {
      "target": ["squirrel"]
    }
  }
}