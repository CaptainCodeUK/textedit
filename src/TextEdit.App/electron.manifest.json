{
  "executable": "TextEdit.App",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "scrappy-text-editor",
  "author": "CaptainCodeUK",
  "singleInstance": false,
  "environment": "Production",
  "build": {
    "appId": "com.scrappytexteditor.app",
    "productName": "Scrappy Text Editor",
    "copyright": "Copyright © 2025",
  "buildVersion": "1.2.4",
    "compression": "maximum",
    "extraMetadata": {
  "version": "1.2.4",
      "description": "Scrappy Text Editor – a cross-platform desktop text editor built with .NET 8, Blazor Server and Electron.NET",
      "author": {
        "name": "CaptainCodeUK",
        "email": "captain@example.com"
      },
      "company": "CaptainCodeUK"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "CaptainCodeUK",
        "repo": "textedit"
      }
    ],
    "directories": {
      "output": "bin/Desktop"
    },
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "identity": null,
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "squirrel",
          "arch": ["x64"]
        }
      ]
    },
    "squirrelWindows": {
    }
  }
}
