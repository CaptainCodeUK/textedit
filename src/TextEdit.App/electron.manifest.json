{
  "executable": "TextEdit.App",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "scrappy-text-editor",
  "author": "",
  "singleInstance": false,
  "environment": "Production",
  "build": {
    "appId": "com.scrappytexteditor.app",
    "productName": "Scrappy Text Editor",
    "copyright": "Copyright Â© 2025",
    "buildVersion": "1.0.0",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ],
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "win": {
      "target": [
        {
          "target": "squirrel",
          "arch": ["x64"]
        }
      ]
    },
    "squirrelWindows": {
      "iconUrl": "https://raw.githubusercontent.com/CaptainCodeUK/textedit/main/src/TextEdit.App/wwwroot/icons/icon.png"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "backgroundColor": "#ffffff"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  }
}